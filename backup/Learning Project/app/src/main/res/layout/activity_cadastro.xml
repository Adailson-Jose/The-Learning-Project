<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".usuario.gui.CadastroActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:scaleType="fitXY"
        android:layout_marginTop="29dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/nomeEntradaID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/emailEntradaID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nomeEntradaID"
        android:layout_alignRight="@+id/nomeEntradaID"
        android:layout_below="@+id/nomeEntradaID"
        android:layout_marginTop="31dp"
        android:ems="12"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/senhaEntradaID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailEntradaID"
        android:layout_alignStart="@+id/emailEntradaID"
        android:layout_below="@+id/emailEntradaID"
        android:layout_marginTop="38dp"
        android:ems="12"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/botaoCadastroID"
        style="@style/btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/textWhite"
        android:background="@drawable/button_stroke"
        android:text="@string/cadastrar"
        android:layout_below="@+id/senhaEntradaID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp" />

    <TextView
        android:id="@+id/textView"
        style="@style/camposTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nome"
        android:layout_below="@+id/imageView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        style="@style/camposTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeEntradaID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="@string/email"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        style="@style/camposTexto"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailEntradaID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/senha"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/avisoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/senhaEntradaID"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
