<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:contexto=".usuario.gui.CadastroActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:scaleType="fitXY"
        android:layout_marginTop="29dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/necessidadeentrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="text"
        android:hint="@string/dica1"
        android:textColorHint="@color/textWhite"
        android:gravity="center"
        android:layout_below="@+id/necessidade"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/botaoContinuar3"
        style="@style/btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:text="@string/continuar"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/necessidadeentrada"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/necessidade"
        style="@style/camposTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/necessidade"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
