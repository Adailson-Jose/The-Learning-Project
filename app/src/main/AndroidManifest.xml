<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thelearningproject.applogin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".infra.gui.MainActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".usuario.gui.LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".usuario.gui.CadastroActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".perfil.gui.TermosActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".perfil.gui.HabilidadeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name=".infra.gui.ConfiguracaoActivity"/>
        <activity android:name=".infra.gui.HomeActivity"/>
    </application>

</manifest>